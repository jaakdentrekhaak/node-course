{
	"compilerOptions": {
		"target": "esnext",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"allowJs": true,
		"sourceMap": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	}
}